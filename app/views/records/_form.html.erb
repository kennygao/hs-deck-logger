<%= form_for [@deck, @record] do |f| %>
  <% if @record.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@record.errors.count, "error") %> prohibited this record from being saved:</h2>

      <ul>
      <% @record.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :opponent_name %><br>
    <%= f.text_field :opponent_name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :opponent_hero %><br>
    <%= f.number_field :opponent_hero, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :first %><br>
    <%= f.check_box :first %>
  </div>
  <div class="form-group">
    <%= f.label :win %><br>
    <%= f.check_box :win %>
  </div>
  <div class="form-group">
    <%= f.label :notes %><br>
    <%= f.text_area :notes, class: 'form-control' %>
  </div>
  <span class="actions">
    <%= f.submit class: 'btn btn-success' %>
  </span>
  <% if @record.persisted? %>
    <%= link_to 'Show', [@deck, @record], class: 'btn btn-primary' %>
  <% end %>
  <%= link_to 'Back', [@deck, Record], class: 'btn btn-default' %>
<% end %>
