<h1>Listing records</h1>

<table class="table">
  <thead>
    <tr>
      <th>Opponent name</th>
      <th>Opponent hero</th>
      <th>First</th>
      <th>Win</th>
      <th>Notes</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.opponent_name %></td>
        <td><%= Record::HEROES[record.opponent_hero] %></td>
        <td><%= record.first %></td>
        <td><%= record.win %></td>
        <td><%= record.notes %></td>
        <td>
          <%= link_to 'Show', [@deck, record], class: 'btn btn-primary btn-sm' %>
          <%= link_to 'Edit', polymorphic_path([@deck, record], action: :edit), class: 'btn btn-default btn-sm' %>
          <%= link_to 'Destroy', [@deck, record], class: 'btn btn-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Record', polymorphic_path([@deck, Record], action: :new), class: 'btn btn-success' %>
